<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="PrimaryInputBox" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Hint color and label color in FALSE state ____ text -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State ___   ___ underline ___title+underline-->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="defaultRectButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/gradient_transparent_back</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>